#include "libAanvaller.nxc"

task main()
{
    Init();
    while(true)
    {
        UpdateSensorValues();
        if(lightval > WHITE)
        {
            BorderControl();
        }
        else if(possession)
        {
            Target();
        }
        else if(balldist > 100) //Calib
        {
            Align();
        }
        else
        {
            Search();
        }
    }
}
